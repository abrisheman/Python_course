base = 10
height = 4
area = (base * height) / 2
print("The area of the triangle is: " +  str(area))

base = 5.5
height = 2.2
area = (base * height) / 2
print("The area of the triangle is: " + str(area))

base = float(input("Enter the base of the triangle: "))
height = float(input("Enter the height of the triangle: "))
area = (base * height) / 2
print("The area of the triangle is: " + str(area))

